{
  "version": "2.0.0",
  "tasks": [{
      "type": "shell",
      "label": "cpp.exe build active file",
      "command": "C:\\MinGW\\bin\\cpp.exe",
      "args": [
        "-g",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "-o",
        "${file}"
      ],
      "options": {
        "cwd": "C:\\MinGW\\bin"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "type": "shell",
      "label": "g++.exe build active file",
      "command": "C:\\MinGW\\bin\\g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "C:\\MinGW\\bin"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}